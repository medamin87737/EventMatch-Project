            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.eventmatch_pr.DashboardController"
            fitToWidth="true"
            fitToHeight="true">
    <VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom, #F5F5F5, #E0E0E0);">
        <padding>
