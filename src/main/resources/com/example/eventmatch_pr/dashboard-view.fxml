        </HBox>

        <!-- Statistiques gÃ©nÃ©rales -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
